# Mykadoo Environment Configuration
# Copy this file to .env and update with your actual values

# ==========================================
# Application
# ==========================================
NODE_ENV=development
APP_NAME=Mykadoo
APP_URL=http://localhost:3001

# ==========================================
# Database (PostgreSQL)
# ==========================================
POSTGRES_DB=mykadoo
POSTGRES_USER=mykadoo_user
POSTGRES_PASSWORD=mykadoo_password
POSTGRES_PORT=5432
DATABASE_URL=postgresql://mykadoo_user:mykadoo_password@localhost:5432/mykadoo

# ==========================================
# Redis Cache
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=mykadoo_redis_password
REDIS_DB=0

# ==========================================
# Ports
# ==========================================
API_PORT=3000
WEB_PORT=3001

# ==========================================
# Next.js Frontend
# ==========================================
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_TELEMETRY_DISABLED=1

# ==========================================
# JWT Authentication
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ==========================================
# Email (SendGrid)
# ==========================================
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@mykadoo.com
EMAIL_FROM_NAME=Mykadoo

# ==========================================
# OAuth Providers
# ==========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/auth/facebook/callback

# ==========================================
# AI Services
# ==========================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# ==========================================
# Vector Database (Pinecone)
# ==========================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=mykadoo-gifts

# ==========================================
# Affiliate Platforms
# ==========================================
AMAZON_ASSOCIATE_ID=your-amazon-associate-id
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key

SHAREASALE_AFFILIATE_ID=your-shareasale-affiliate-id
SHAREASALE_API_TOKEN=your-shareasale-api-token
SHAREASALE_API_SECRET=your-shareasale-api-secret

CJ_AFFILIATE_ID=your-cj-affiliate-id
CJ_API_KEY=your-cj-api-key

# ==========================================
# Monitoring & Analytics
# ==========================================
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# ==========================================
# Storage (AWS S3)
# ==========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=mykadoo-uploads

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW=60

# ==========================================
# Security
# ==========================================
CORS_ORIGIN=http://localhost:3001
SESSION_SECRET=your-session-secret-change-this
COOKIE_DOMAIN=localhost

# ==========================================
# Feature Flags
# ==========================================
FEATURE_OAUTH_ENABLED=true
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_CACHING_ENABLED=true

# ==========================================
# Development
# ==========================================
DEBUG=false
LOG_LEVEL=info
