# Environment Configuration for Mykadoo Platform
# Copy this file to .env and update values as needed
# IMPORTANT: Never commit .env file to version control

# ======================
# Application Environment
# ======================
NODE_ENV=development

# ======================
# PostgreSQL Database
# ======================
POSTGRES_DB=mykadoo
POSTGRES_USER=mykadoo_user
POSTGRES_PASSWORD=mykadoo_password
POSTGRES_PORT=5432

# Database connection URL (used by Prisma/TypeORM)
DATABASE_URL=postgresql://mykadoo_user:mykadoo_password@localhost:5432/mykadoo

# ======================
# Redis Cache
# ======================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=mykadoo_redis_password

# ======================
# API Configuration
# ======================
API_PORT=3000
API_URL=http://localhost:3000

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=7d

# ======================
# Web Application (Next.js)
# ======================
WEB_PORT=3001
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ======================
# AI/ML Services
# ======================
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_FALLBACK_MODEL=gpt-3.5-turbo

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_FALLBACK_MODEL=claude-3-haiku-20240307

# Vector Database (Pinecone)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX=mykadoo-products

# ======================
# Affiliate Platforms
# ======================
# Amazon Product Advertising API
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key
AMAZON_ASSOCIATE_TAG=your-amazon-associate-tag
AMAZON_REGION=us-east-1

# ShareASale
SHAREASALE_API_TOKEN=your-shareasale-api-token
SHAREASALE_API_SECRET=your-shareasale-api-secret
SHAREASALE_AFFILIATE_ID=your-shareasale-affiliate-id

# CJ Affiliate
CJ_API_KEY=your-cj-api-key
CJ_WEBSITE_ID=your-cj-website-id

# ======================
# OAuth Providers
# ======================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/auth/facebook/callback

# ======================
# Monitoring & Analytics
# ======================
# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# Datadog (APM)
DD_API_KEY=your-datadog-api-key
DD_SITE=datadoghq.com

# ======================
# Email Service
# ======================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@mykadoo.com

# ======================
# Storage
# ======================
# AWS S3 (for user uploads, product images)
AWS_S3_BUCKET=mykadoo-assets
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ======================
# CORS Configuration
# ======================
CORS_ORIGINS=http://localhost:3001,http://localhost:3000
